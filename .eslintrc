{
  "extends": "react-app",
  "settings": {
    "import/resolver": {
      "webpack": { "config": "webpack.config.base.js" }
    }
  },
  "globals": {
    "__DEV__": false,
    "__ACC__": false,
    "__PROD__": false,
    "__CLIENT__": false,
    "__SERVER__": false
  },
  "rules": {
    "semi": ["error", "always"],
    "no-console": [2, { "allow": ["info", "error"]}]
  }
}
