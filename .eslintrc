{
    'extends': 'airbnb',
    'settings': {
        'import/resolver': 'webpack',
    },
    'parser': 'babel-eslint',
    'plugins': ['react'],
    'globals': {
        '__DEV__': false,
        '__ACC__': false,
        '__PROD__': false,
        '__CLIENT__': false,
        '__SERVER__': false,
    },
    'rules': {
        'consistent-return': 0,
        'indent': ['error', 4],
        'max-len': 0,
        'no-console': [2, { allow: ['info', 'error']}],
        'no-nested-ternary': 0,
        'no-param-reassign': 0,
        'no-underscore-dangle': 0,
        'react/jsx-indent': ['error', 4],
        'react/jsx-indent-props': ['error', 4],
    }
}
