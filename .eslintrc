{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "react-app"
  ],
  "settings": {
    "react": {
      "version": "latest"
    }
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__ACC__": false,
    "__PROD__": false
  },
  "rules": {
    "array-bracket-spacing": ["error", "never"],
    "arrow-parens": 2,
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "block-spacing": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "import/first": "error",
    "import/no-duplicates": "error",
    "import/order": ["error", {
      "groups": [
        "builtin",
        "external",
        "internal"
      ]
    }],
    "jsx-quotes": ["error", "prefer-double"],
    "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true,
      "overrides": {
        "return": { "after": true },
        "throw": { "after": true },
        "case": { "after": true }
      }
    }],
    "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }],
    "no-console": [2, { "allow": ["info", "error"]}],
    "no-trailing-spaces": ["error"],
    "object-curly-spacing": ["error", "always"],
    "prefer-const": ["error"],
    "quotes": ["error", "single"],
    "react/no-unused-prop-types": 2,
    "react/prop-types": 2,
    "react/self-closing-comp": ["error", {
      "component": true,
      "html": true
    }],
    "react/jsx-tag-spacing": {
      "closingSlash": "never",
      "beforeSelfClosing": "always",
      "afterOpening": "never",
      "beforeClosing": "never"
    },
    "semi": ["error", "always"],
    "space-before-blocks": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "space-in-parens": ["error", "never"],
    "space-infix-ops": "error",
    "eol-last": ["error", "always"],
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/explicit-function-return-type": false,
    "@typescript-eslint/no-empty-interface": false,
    "@typescript-eslint/prefer-interface": false,
    "@typescript-eslint/explicit-member-accessibility": [true, "no-public"],
    "@typescript-eslint/no-use-before-define": false,
    "@typescript-eslint/no-object-literal-type-assertion": false,
    "@typescript-eslint/no-parameter-properties": false,
    "@typescript-eslint/camelcase": false,
    "@typescript-eslint/prefer-namespace-keyword": false,
    "@typescript-eslint/no-namespace": false,
    "@typescript-eslint/no-explicit-any": false,
    "@typescript-eslint/no-non-null-assertion": false
  }
}
